#include<iostream>
#include"link_list.h"

void display(LinkList<int> & arr) {
  LinkList<int>::Postion p = arr.First();
  int cnt = 0;
  for(; NULL != p; p = arr.Next(p)) {
    std::cout << arr.Retrieve(p)<< "\t";
    cnt ++;
  }
  std::cout<< "\ncount : " << cnt  << std::endl;
}
int main(void) {
  using namespace std;
  LinkList<int> arr;
  int ch = 1;
  int n;
